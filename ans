import matplotlib.pyplot as plt
import numpy as np
x = np.arange(0,180)
y = np.cos(x * np.pi / 180.0)
plt.plot(x,y)
plt.show()
# 如果要存成圖形檔:
# 把 pyplot.show() 換成下面這行:
n = 1024
X = np.random.normal(0,1,n)
Y = np.random.normal(0,1,n)
T = np.arctan2(Y,X)
plt.scatter(X,Y, s=75, c=T, alpha=.5)

plt.xlim(-1.5,1.5)
plt.ylim(-1.5,1.5)

plt.show()
